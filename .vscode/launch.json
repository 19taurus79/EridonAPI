{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Запустить сервер (с отладкой)",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "new_agri_bot_backend.main:app",
        "--host",
        "127.0.0.1",
        "--port",
        "8000"
      ],
      "jinja": true,
      "justMyCode": false,
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Python: Запустить сервер (без отладки)",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "new_agri_bot_backend.main:app",
        "--reload",
        "--host",
        "127.0.0.1",
        "--port",
        "8000"
      ],
      "jinja": true,
      "justMyCode": true,
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    }
  ]
}
